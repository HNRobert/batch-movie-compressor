# Example environment configuration file
# Copy to .env and modify values; the app reads ONLY environment variables now.

# Directories
INPUT_DIR=./data/in
OUTPUT_DIR=./data/out

# Core behavior
TARGET_SIZE=12.0           # GB
RECURSIVE=true
ENABLE_GPU=true
DRY_RUN=false

# Logging
FFMPEG_LOG_LEVEL=info
LOG_LEVEL=info
LOG_PATH=/data/out/compression.log

# GPU/Encoder
VAAPI_DEVICE=/dev/dri/renderD128
# PREFERRED_ENCODER=av1_nvenc # Optional: av1_nvenc|av1_vaapi|hevc_nvenc|hevc_vaapi|libsvtav1|libaom-av1
# OUTPUT_FORMAT=mkv           # Optional override: mkv|mp4

# Bitrates and safety
AUDIO_BITRATE_KBPS=640      # default audio bitrate for size calc
EAC3_BITRATE_KBPS=640       # multi-channel audio bitrate
AAC_BITRATE_KBPS=192        # stereo audio bitrate
MIN_VIDEO_BITRATE_KBPS=1000 # minimum video bitrate
SAFETY_RESERVE_MB=100       # safety margin in MB

# Progress logging
PROGRESS_LOG_INTERVAL_START_SEC=2
PROGRESS_LOG_INTERVAL_SEC=60
